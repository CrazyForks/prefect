{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "ESNext",
		"skipLibCheck": true,
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@/*": ["./src/*"],
			"@tests/*": ["./tests/*"]
		},
		"types": ["vite/client"],
		"jsx": "react-jsx"
	},
	"include": ["vite.config.ts", "tests/**/*.ts"]
}
